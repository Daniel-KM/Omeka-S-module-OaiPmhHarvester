<?php $namespaces = $settings['namespaces'] ?? [] ?>
<?php if ($namespaces): ?>
    <div class="meta-group">
        <h4><?= $this->translate('XML namespaces') ?></h4>
        <?php foreach ($namespaces as $prefix => $uri): ?>
            <div class="value"><?= $this->escapeHtml($prefix) ?> = <?= $this->escapeHtml($uri) ?></div>
